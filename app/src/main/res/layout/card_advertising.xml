<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Advertising"
        android:textSize="20sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="3">

        <TableRow>

            <TextView
                android:id="@+id/advertising_enabled_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:gravity="start"
                android:text="Advertising enabled"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/advertising_enabled_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:gravity="center|end"
                android:text="No"
                android:textSize="12sp" />

        </TableRow>

        <TableRow
            android:layout_marginTop="12dp"
            android:animateLayoutChanges="true"
            android:visibility="visible">

            <TextView
                android:id="@+id/advertising_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:gravity="start"
                android:text="Advertisement name"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/advertising_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:gravity="center|end"
                android:text="Unknown"
                android:textSize="12sp" />

        </TableRow>

        <TableRow
            android:layout_marginTop="12dp"
            android:animateLayoutChanges="true"
            android:visibility="visible">

            <TextView
                android:id="@+id/advertising_device_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:gravity="start"
                android:text="Advertise as device"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/advertising_device_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:gravity="end"
                android:textSize="12sp" />

        </TableRow>

        <TableRow
            android:layout_marginTop="12dp"
            android:animateLayoutChanges="true"
            android:visibility="visible">

            <TextView
                android:id="@+id/advertising_connectable_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:gravity="start"
                android:text="Connectable"
                android:textSize="16sp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/advertising_connectable_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:gravity="end" />

        </TableRow>

        <TableRow
            android:layout_marginTop="12dp"
            android:animateLayoutChanges="true"
            android:visibility="visible">

            <TextView
                android:id="@+id/advertising_allowname_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:gravity="start"
                android:text="Advertise device name"
                android:textSize="16sp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/advertising_allowname_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:gravity="end" />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:weightSum="2">

        <Button
            android:id="@+id/advertising_start_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:text="Start advertising" />

        <Button
            android:id="@+id/advertising_stop_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:text="Stop advertising" />

    </LinearLayout>

</LinearLayout>