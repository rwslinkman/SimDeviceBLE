<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Bluetooth"
        android:textSize="20sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="3">

        <TableRow>

            <TextView
                android:id="@+id/ble_status_supported_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:gravity="start"
                android:text="Bluetooth supported"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ble_status_supported_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:gravity="center|end"
                android:text="No"
                android:textSize="12sp" />

        </TableRow>

        <TableRow
            android:layout_marginTop="12dp"
            android:animateLayoutChanges="true"
            android:visibility="visible">

            <TextView
                android:id="@+id/ble_status_advertising_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:gravity="start"
                android:text="Bluetooth Advertising supported"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ble_status_advertising_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:gravity="end"
                android:text="No"
                android:textSize="12sp" />

        </TableRow>

        <TableRow
            android:layout_marginTop="12dp"
            android:animateLayoutChanges="true"
            android:visibility="visible">

            <TextView
                android:id="@+id/ble_status_enabled_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:gravity="start"
                android:text="Bluetooth enabled"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ble_status_enabled_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:gravity="end"
                android:text="No"
                android:textSize="12sp" />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:weightSum="1">

        <Button
            android:id="@+id/ble_enable_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:text="Turn on Bluetooth" />

    </LinearLayout>

</LinearLayout>