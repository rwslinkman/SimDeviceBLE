<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".grpc.GrpcServerActivity">

    <TextView
        android:id="@+id/simdeviceble_grpc_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="SimDeviceBLE gRPC Server"
        android:textSize="28sp"
        android:textColor="#000000"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/simdeviceble_grpc_subtitle"
        android:layout_below="@id/simdeviceble_grpc_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="Server is running"
        android:textSize="22sp"
        android:gravity="center"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/simdeviceble_grpc_eventlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/simdeviceble_grpc_subtitle"
        />

</RelativeLayout>